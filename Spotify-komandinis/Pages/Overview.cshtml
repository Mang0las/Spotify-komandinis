@page
@model Spotify_komandinis.OverviewModel
@{


    <div class="text-center">
        <p>Prisijungimas sekmingas!</p>

    </div><div class="text-center">
        <button id="logout-button" class="btn btn-primary">Log out</button>
    </div>
    <div>
        <select name="menuType">
            <option value="">Select what you want to see</option>
            <option value="1">artists</option>
            <option value="2">tracks</option>
            <option value="3">Three</option>
        </select>
        <button id="display-button" class="btn btn-primary">Display</button>

    </div>

    <table class="table table-light table-striped table-hover" style="display:none" id="tracks" runat="server">
        <thead>
            <tr>
                <th>Album</th>
                <th>Artist</th>
                <th>Name</th>
                <th>Popularity</th>
                <th>Listen</th>
            </tr>
        </thead>
        <tbody>

            @foreach (Track track in Model.trackList)
            {
                <tr>
                    <td>@track.album</td>
                    <td>@track.artist</td>
                    <td>@track.name</td>
                    <td>@track.popularity</td>
                    <td><iframe src="https://open.spotify.com/embed/track/@track.id" width="300" height="80" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe></td>
                </tr>

            }
        </tbody>
    </table>
    <table class="table table-light table-striped table-hover" style="display:none" id="tracks" runat="server">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>

            @foreach (Artist artist in Model.artistList)
            {
                <tr>
                    <td>@artist.name</td>
                </tr>
            }
        </tbody>
    </table>
    @section Scripts{
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script>

            //login button kuris redirectina i spotify ir grazina koda kartu su URL i /Callback
            $(document).ready(function () {

                $("#display-button").click(function () {
                    $("#tracks").toggle();
                });

                $("#logout-button").click(function () {
                    window.location.href = "/Index";
                });

            });
        </script>
    }

}   